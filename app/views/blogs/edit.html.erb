<h1>編集</h1>
<!-- form_forを定義 -->
<%= form_for(@blog) do |f| %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_area :body %>

    <h4>カテゴリ</h4>
    <%= f.text_field :category %>

    <h4>画像</h4>
  	<%= f.attachment_field :blog_image%>

    <%= f.submit '編集を保存' %>
<!-- submitしたらcreateに飛ぶ -->
<% end %>